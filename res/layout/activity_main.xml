<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00BAEE" >

    <!-- Cisco logo -->    
    <ImageView
        android:id="@+id/ciscoLogo"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cisco_logo" />
	  
	<!-- Phone number spinner -->
	<Spinner
	    android:id="@+id/phoneInput"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/ciscoLogo"
        android:layout_centerHorizontal="true"
        android:ems="10"
	    android:hint="Select Number"/>
    
	<!-- Meeting number display -->
    <EditText
        android:id="@+id/meetingNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/meetingPasswordInput"
        android:layout_below="@+id/phoneInput"
        android:ems="10"
        android:hint="Meeting Number"
        android:inputType="phone" >

        <requestFocus />
    </EditText>
	
    <!-- Meeting password display -->
    <EditText
        android:id="@+id/meetingPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meetingNumberInput"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Meeting Password"
        android:inputType="textPassword" />  
      
    <!-- Dialpad -->
    <GridView
        android:id="@+id/dialpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/meetingPasswordInput"
        android:layout_above="@+id/callButton"
        android:numColumns="3" />  
    
    <!-- Call Button -->
    <Button
        android:id="@+id/callButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Call" />

</RelativeLayout>