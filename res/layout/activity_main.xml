<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- Displays connection status -->

	<!-- Phone number display -->
    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusLabel"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint = "Phone number"
        android:inputType="phone" />

    <!-- Meeting number display -->
       <EditText
        android:id="@+id/meetingNumberInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneInput"
        android:layout_below="@+id/phoneInput"
        android:ems="10"
        android:hint="Meeting Number"
        android:inputType="phone" >
        <requestFocus />
    </EditText>
    
    <!-- Meeting password display -->
    <EditText
        android:id="@+id/meetingPasswordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meetingNumberInput"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Meeitng Password"
        android:inputType="textPassword" />  
      
    <!-- Dialpad -->
    <GridView
        android:id="@+id/dialpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/callButton"
        android:layout_alignLeft="@+id/wifiLevelLabel"
        android:layout_below="@+id/meetingPasswordInput"
        android:numColumns="3" >
        
    </GridView>
    
    <!-- Call Button -->
   <TextView
        android:id="@+id/wifiLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Wifi Status"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/cellLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/wifiLevelLabel"
        android:layout_alignBottom="@+id/wifiLevelLabel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:text="Cell Status"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Connection Status"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/callButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cellLevelLabel"
        android:layout_centerHorizontal="true"
        android:text="" />

</RelativeLayout>